    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Generar y Servir Web",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/preview_generator.py",
            "args": [
                "--serve"
            ],
            "console": "integratedTerminal"
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome against localhost",
            "url": "http://localhost:8080",
            "webRoot": "${workspaceFolder}"
        }
    ]
}